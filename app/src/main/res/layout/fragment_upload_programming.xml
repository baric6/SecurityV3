<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadProgramming">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp"
            >

            <ImageView
                android:id="@+id/ProgrammingImage"
                android:layout_width="170dp"
                android:layout_height="184dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/folder_developer"
                android:layout_gravity="center"
                />

            <EditText
                android:id="@+id/programmingTitle"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_margin="3dp"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:hint="Title"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textColorHint="@color/black"

                />

            <EditText
                android:id="@+id/programmingUrl"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:ems="10"
                android:hint="Url"
                android:inputType="textPersonName"
                android:background="@drawable/rounded_edittext"
                android:layout_margin="3dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                />

            <EditText
                android:id="@+id/programmingComment"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:ems="10"
                android:hint="Comment"
                android:inputType="textPersonName"
                android:background="@drawable/rounded_edittext"
                android:layout_margin="3dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                />
            
            <Spinner
                android:id="@+id/programmingSpinner"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/programmingAdd"
                android:layout_width="195dp"
                android:layout_height="72dp"
                android:layout_gravity="right"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="add" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>